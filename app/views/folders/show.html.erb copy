	xbody{
	  font-size   :76%;
	  font-family :Verdana, Helvetica; }
	div#example_1 table, div#example_2 table {
	  font-size   :1.0em; }
	table {
		width: 100%;
	  text-align: left; }
	table thead tr th {
	  padding     :2px 4px;
	  background  :#d7d7d7;
	  border-bottom:1px solid black; }
	table tbody tr td {
	  padding     :2px 4px; }
	table tbody tr.alt {
	  background  :#e8f3e8; }
	table tbody tr.collapsed td {
	  padding     :0px; }
	table tbody tr.collapsed td div {
	  font-family :Serif;
	  white-space :pre;
	  font-size   :1.0em;
	  margin-left :10px; }
</style>

